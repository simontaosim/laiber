<style>
	.display{
		max-width: 100% !important;
		width: 100% !important;
		text-align: center !important;
		padding-left: 1rem !important;
		padding-right: 1rem !important;
	}
	
	
</style>

<div class="row">
	<ul class="breadcrumbs">
  <li><a href="#">首页</a></li>
  <li><a href="#">脑库</a></li>
  <li class="unavailable"><a href="#">Gene Splicing</a></li>
  <li class="current"><a href="#">Cloning</a></li>
</ul>
</div>
<section id="scrollerBox" class="scroll-container  display">
<br>
<div class="row display">
<h4><%= @user.name %>的所有帖子</h4>
	<div class="row display"  data-equalizer='foo' data-equalizer-mq >
	<% @posts.each_with_index do |post,index| %>
	<div post-id='<%= post[0]%>' class='row'>
	<div class='medium-6 large-6 small-6 columns'><%= post[1]%></div>
	<div class='medium-4 large-4 small-4 columns'><span><%= link_to '删除', post_path(post[0],:from_user_all => 1, :user_id => @user.id), method: :delete, data: { confirm: '你确定删除?' } %></span></div>
	<div class='medium-2 large-2 small-2 columns'><span class='small'><small>创建于:</small></span><%= post[3]%></div>
	</div>
		
	<% end %>
</div>
<script type="text/javascript">
	$(".panel").each(function(index, el) {
		if(index%3 == 0){
			$(this).addClass('callout')
		}	
	});
</script>
</section>
<div class="row pageDisplay">
<br>
	<div class="small-2 medium-3 large-3 columns columnsDisplay"></div>
	<div class="small-6 medium-6 large-6 columns columnsDisplay">
		<ul class="pagination">
		  <li class="arrow unavailable"><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i %>&first=1">&laquo;</a></li>
		  <% if @page.to_i < 2 and @page.to_i > 1 %>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id) %>&page=<%=@page-1 %>"><%= @page -1 %></a></li>
		  <% end %>
		  <% if @page.to_i < 4 and @page.to_i > 1 %>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page-2 %>"><%= @page - 2 %></a></li>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>?page=<%=@page-1 %>"><%= @page -1 %></a></li>
		  <% end %>
		  <li class="current"><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i %>"><%= @page.to_i %></a></li>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i+1%>"><%= @page.to_i+1 %></a></li>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i+2 %>"><%= @page.to_i+2 %></a></li>
		  <li class="unavailable"><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i+5 %>">&hellip;</a></li>
		  <li><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i+9 %>"><%= @page.to_i+9 %></a></li>
		  <li class="arrow"><a href="<%= users_show_all_posts_by_user_id_path(user_id: @user.id)  %>&page=<%=@page.to_i %>&last=1">&raquo;</a></li>
		</ul>
	</div>
	<div class="small-4 medium-3 large-3 columns columnsDisplay">
  
	</div>
	<br>
	
</div>
<div style="text-align:center">
		© 2015 <a href="<%= root_url %>" target="_blank">Laiber, Inc
	</div>



