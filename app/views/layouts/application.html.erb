<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="">
  <meta name="keywords" content="">
  <meta name="viewport"
        content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>
    <% if @title %>
    <%= @title %>
    <% else %>
    Laiber
    <% end %>

  </title>

  <!-- Set render engine for 360 browser -->
  <meta name="renderer" content="webkit">

  <!-- No Baidu Siteapp-->
  <meta http-equiv="Cache-Control" content="no-siteapp"/>

  <link rel="icon" type="image/png" href="assets/i/favicon.png">

  <!-- Add to homescreen for Chrome on Android -->
  <meta name="mobile-web-app-capable" content="yes">
  <%= favicon_link_tag 'app-icon72x72@2x.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

  <!-- Add to homescreen for Safari on iOS -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="Amaze UI"/>
  <%= favicon_link_tag 'app-icon72x72@2x.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>
  <%= stylesheet_link_tag    'amazeui.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'app.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag    'application.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<div class="nav">
    <div style="text-align: center;float:left;margin-bottom:10px;margin-left:40px;"><a href="<%= welcome_index_url %>">
      <%=image_tag 'laiber_logo.png', alt: "图片", class: "logo_img" %>
    </a></div>
     <ul class="am-nav am-nav-tabs">

      <li class="am-active ">
      <%
        if session[:progress]
          user_session = UserSession.find(session[:progress].fetch("_id").fetch("$oid"))
        end
        if user_session
       %>
      <li>
      <%= link_to '登出', user_session_path(user_session),
               method: :delete,
               data: { confirm: '您确定不?' } %>
      </li>
      <li><%= link_to(user_session.name.to_s, personal_center_index_path ) %></li>
      <li class="am-dropdown" data-am-dropdown>
        <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
            消息 <span class="am-icon-caret-down"></span>
        </a>
        <ul class="am-dropdown-content">
            <li><a href="#">此处有消息菜单</a></li>
            <li><a href="#">此处有消息菜单</a></li>
            <li><a href="#">此处有消息菜单</a></li>
            <li><a href="#">此处有消息菜单</a></li>
            <li><a href="#">此处有消息菜单</a></li>
          </ul>

    </li>

      <% else %>
      <li><a href="<%= new_user_session_path %>">登陆</a></li>
      <% end %>
    </ul>
</div>

<!--[if (gte IE 9)|!(IE)]><    !-->
<%= javascript_include_tag 'jquery.min.js', 'data-turbolinks-track' => true %>
<%= yield %>

<%= javascript_include_tag 'amazeui.min.js', 'data-turbolinks-track' => true %>

<%= javascript_include_tag 'app.js', 'data-turbolinks-track' => true %>
<!--<![endif]-->
<footer>
  <hr>
  <p class="am-padding-left">© 2015 , Ulaiber in Shenzhen of China</p>
</footer>
</body>
</html>
