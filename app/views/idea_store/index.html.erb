<section id="scrollerBox" class="scroll-container  display">
<br>
<div class="row display">
	<div class="row"  data-equalizer='foo' data-equalizer-mq >
	<% @posts.each_with_index do |post,index| %>
		<% if (index/4) >= 1 and (index%4) == 0 %>
	  	</div><div class="row" data-equalizer='foo' data-equalizer-mq="foo" ><div class="small-12 medium-3 large-3 columns" >
	  	<div data-equalizer-watch="foo" class="panel" >
	  	<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
	  	<h4><%= post[1] %></h4></a>
	  	

	  	<% if post[2] %>
	  		<% if ImageItem.find(post[2][0]).url_from_content.include?('ttp:') %>
	  		<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
	  			<img src="h<%= ImageItem.find(post[2][0]).url_from_content %>"  alt="">
	  			</a>
	  		<% else %>
	  		<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
				<img src="../<%= ImageItem.find(post[2][0]).url_from_content %>"  alt="">
				</a>
	  		<% end %>
	  	<% else %>
	  	<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
			<%= image_tag 'default.jpg', alt: '图片' %>
			</a>
	  	<% end %>
	  	</div>
	  	</div>
	  <% else %>
	   	<div class="small-12 medium-3 large-3 columns">
	   	<div data-equalizer-watch="foo" class="panel" >
	   	<h4>
			<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'><%= post[1] %></a>
		</h4>
	   	<% if post[2] %>
	   	<script type="text/javascript">
	  	//alert('<%= ImageItem.find(post[2][0]).url_from_content.to_s %>');
	  	</script>
	   	<% if ImageItem.find(post[2][0]).url_from_content.include?('ttp:') %>
	  			<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
	  				<img src="h<%= ImageItem.find(post[2][0]).url_from_content %>"  alt="">
	  			</a>
	  			
	  		<% else %>
	  		<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
				<img src="../<%= ImageItem.find(post[2][0]).url_from_content %>"  alt="">
				</a>
	  		<% end %>
	   	<% else %>
	   	<a href='javascript:window.location.assign("<%= idea_store_show_post_url+'?post_id='+post[0].to_s%>")'>
	   		<%= image_tag 'default.jpg', alt: '图片' %>
	   		</a>
	   	<% end %>
	   	</div>
	   	
	   	</div>
	  <% end %>
	<% end %>
</div>
<script type="text/javascript">
	$(".panel").each(function(index, el) {
		if(index%3 == 0){
			$(this).addClass('callout')
		}	
	});
</script>
</section>
<div class="row pageDisplay">
<br>
	<div class="small-2 medium-3 large-3 columns columnsDisplay"></div>
	<div class="small-6 medium-6 large-6 columns columnsDisplay">
		<ul class="pagination">
		  <li class="arrow unavailable"><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i %>&first=1">&laquo;</a></li>
		  <% if @page.to_i < 2 and @page.to_i > 1 %>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page-1 %>"><%= @page -1 %></a></li>
		  <% end %>
		  <% if @page.to_i < 4 and @page.to_i > 1 %>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page-2 %>"><%= @page - 2 %></a></li>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page-1 %>"><%= @page -1 %></a></li>
		  <% end %>
		  <li class="current"><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i %>"><%= @page.to_i %></a></li>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i+1%>"><%= @page.to_i+1 %></a></li>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i+2 %>"><%= @page.to_i+2 %></a></li>
		  <li class="unavailable"><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i+5 %>">&hellip;</a></li>
		  <li><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i+9 %>"><%= @page.to_i+9 %></a></li>
		  <li class="arrow"><a href="<%= idea_store_index_url  %>?page=<%=@page.to_i %>&last=1">&raquo;</a></li>
		</ul>
	</div>
	<div class="small-4 medium-3 large-3 columns columnsDisplay">
  
	</div>
	<br>
	
</div>
